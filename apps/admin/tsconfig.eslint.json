{
  // https://nuxt.com/docs/guide/concepts/typescript
  "extends": "./.nuxt/tsconfig.json",
  "vueCompilerOptions": {
    "plugins": [
      "@vue/language-plugin-pug"
    ]
  },
  "include": [
    "layouts/**/*.vue",
    "components/**/*.vue",
    "middleware/**/*.ts",
    "pages/**/*.vue",
    "plugins/**/*.ts",
    "test/**/*.ts",
    "app.vue",
    "nuxt.config.ts",
    ".eslintrc.cjs"
  ]
}
